<div class="projects-index col-md-5">
	<div class="dashboard-header">
		<h3 id="dashboard-greeting">Projects</h3>
		<span><a href="#/projects" id="all-projects">Show all</a></span>
		<span><a href="#/projects/new" id="create-project" class="btn btn-primary btn-xs">Create Project</a></span>
	</div>
	<div class="project-list">
		<% collection.each( function(project) { %>
			<div class="project-board panel panel-default">
			<div class="panel-heading">
				<h3 class="project-title panel-title"><a href="/#/projects/<%= project.id %>"><%= project.escape('title') %></a></h3>
				<button class="destroy btn btn-default btn-xs" data-id="<%= project.id %>">&times;</button>
			</div>
			<div class="panel-body">
			</div>
			</div>
		<% }) %>
	</div>
</div>
