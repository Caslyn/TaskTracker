<div class='story-title'>
		<span class="glyphicon glyphicon-cog edit-story"></span>
		<span class="glyphicon glyphicon-th-large show-modal"></span>

		<h4 class="title"><%= story.escape('title') %></h4>
</div>

<div class="story-modal modal modal-fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title"><%= story.escape('title') %></h4>
			</div>
			<div class="modal-body">
				<ul class="list-group">
					<li class="list-group-item">
						<p>Points</p>
						<p><%= story.escape('points') %></p>
					</li>
					<li class="list-group-item">
						<p>Type</p>
						<p><%= story.escape('story_type') %></p>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>