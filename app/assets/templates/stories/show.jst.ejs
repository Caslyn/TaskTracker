<li class='story-title'
		data-tracker-id="<%= story.escape('tracker_id') %>"
		data-story-id="<%= story.escape('id') %>">
		<span class="glyphicon glyphicon-cog edit-story"></span>
		<span class="glyphicon glyphicon-th-large show-modal"></span>

		<h4 class="title"><%= story.escape('title') %></h4>
</li>

<!-- Show Modal -->

<div class="story-modal modal modal-fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title"><%= story.escape('title') %></h4>
			</div>
			<div class="modal-body">
				<ul class="list-group">
					<li class="list-group-item"><%= story.escape('points') %></li>
					<li class="list-group-item"><%= story.escape('story_type') %></li>
				</ul>
			</div>
		</div>
	</div>
</div>