
<div class="dialog-box">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title">Sign In</h4>
	</div>
	<div class="modal-body">
		<form role="form" action="<%= session_url %>" method="post">
				<input type="hidden" name="authenticity_token"
							 value="<%= form_authenticity_token %>">
			<div class="form-group">
				<input name="user[email]" type="text" class="form-control"
							 placeholder="Email">
			</div>
			<div class="form-group">
				<input name="user[password]" type="password" class="form-control" placeholder="Password">
			</div>
	</div>
	<div class="modal-footer">
			<button type="submit" class="btn btn-primary">Sign In</button>
	</div>
	</form>
</div>

<% content_for :auth_button do %>
	<div class="entry-link">
		<%= link_to "Sign Up", new_user_url, method: :get%>
	</div>
<% end %>
