<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	  <div class="navbar-header">
	    <!-- reposition if signed in or signing up/in -->
	    <% unless signed_in? %>
		  	<a class="navbar-brand brand-centered" href="/"><img src="logo.png" />Task Tracker</a>
		  <% else %>
		    <a class="navbar-brand" href="/">Task Tracker</a>
	    <% end %>
	  </div>
	  <!-- nav bar options -->
    <ul class="nav navbar-nav navbar-signin">
    	<% if signed_in? %>
    		<li class="dropdown">
  			  <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:white">Projects<span class="caret"></span></a>
  			  <ul class="dropdown-menu" role="menu">
  			  	<li><a href="#/projects" id="all-projects-link" >View All Projects</a></li>
  			  	<li><a href="#/projects/new" id="create-project-link">Create Project</a></li>
  			  	<% current_user.projects.each do |project| %>
  			  		<li><a href="#/projects/<%= project.id %>"><%= project[:title] %></a></li>
  			  	<% end %>
  			  </ul>
    		</li>
    		<li class="dashboard-link"><a href="" style="color:white">Dashboard</a></li>
  			<li class="sign-out-link" ><a href="/session" data-method="delete" style="color:white">Sign Out</li>

      <% elsif content_for :auth_button %>
      	  <div class="enter-app">
			      <%= yield :auth_button %>
			    </div>
			 <% else %>
			   <button type="button" class="btn btn-default btn-md" id="signin-link"><%= link_to "Sign In", new_session_url %></button>
			   <button type="button" class="btn btn-default btn-md" id="signup-link"><%= link_to "Sign Up", new_user_url %></button>
      <% end %>
    </ul>
</nav>


<% if flash[:errors] %>
	<div class="alert alert-warning alert-dismissible" role="alert">
	  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		<%= flash[:errors].join("<br>").html_safe %>
	</div>
<% end %>
